{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "AGENTS.md",
    "FORcodex.md"
  ],
  "permission": {
    "task": {
      "*": "ask",
      "orchestrator": "allow",
      "delivery-engineer": "allow",
      "safety-verifier": "allow",
      "growth-operator": "allow",
      "local-error-fixer": "allow",
      "plan-coordinator": "allow",
      "general": "allow",
      "explore": "allow"
    },
    "skill": {
      "*": "ask",
      "feature-implement": "allow",
      "bugfix-triage": "allow",
      "prisma-migrate": "ask",
      "policy-abuse-gate": "ask",
      "quality-gate": "allow",
      "plan-progress-sync": "allow",
      "cycle-kickoff": "allow",
      "release-readiness": "allow",
      "research-memory": "allow"
    }
  },
  "agent": {
    "orchestrator": {
      "permission": {
        "task": {
          "*": "deny",
          "delivery-engineer": "allow",
          "safety-verifier": "allow",
          "growth-operator": "allow",
          "local-error-fixer": "allow",
          "plan-coordinator": "allow"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  }
}
