{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "skill": {
      "*": "ask",
      "feature-implement": "allow",
      "bugfix-triage": "allow",
      "prisma-migrate": "ask",
      "policy-abuse-gate": "ask",
      "quality-gate": "allow"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  }
}
